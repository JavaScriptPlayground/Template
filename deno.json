{
  "tasks": {
    "build": "deno run -A ./build/build.ts",
    "build:watch": "deno run -A ./build/build.ts --watch",
    "build:dev": "deno run -A ./build/build.ts --develope",
    "build:dev:watch": "deno run -A ./build/build.ts --develope --watch",
    "serve": "",
    "lint": "deno lint",
    "test": "deno test -A --check --reload --doc --allow-none --junit-path=\"./reports/report.xml\""
  },
  "exclude": [
    "./dist/"
  ],
  "test": {
    "include": [
      "**/*.test.ts"
    ]
  },
  "compilerOptions": {
    "target": "ES6",
    "module": "ES6",
    "experimentalDecorators": true,
    "lib": [
      "es6",
      "dom",
      "dom.iterable",
      "webworker",
      "webworker.importscripts",
      "webworker.iterable"
    ],
    "types": [
      "./index.d.ts"
    ]
  },
  "fmt": {
    "singleQuote": true,
    "lineWidth": 120
  },
  "lint": {
    "rules": {
      "tags": [
        "recommended"
      ],
      "include": [
        "camelcase",
        "default-param-last",
        "eqeqeq",
        "explicit-function-return-type",
        "explicit-module-boundary-types",
        "guard-for-in",
        "no-eval",
        "no-sparse-arrays",
        "prefer-ascii"
      ],
      "exclude": [
        "no-inferrable-types"
      ]
    }
  }
}
