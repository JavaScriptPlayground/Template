{
    "tasks": {
        "bundle": "deno run -A ./lib/bundle/bundle.ts --config='./bundle.json'",
        "bundle-watch": "deno run -A --watch ./lib/bundle/bundle.ts --config='./bundle.json'",
        "lint-watch": "deno lint --watch"
    },
    "exclude": [
        "**/*.test.ts"
    ],
    "test": {
        "include": [
            "**/*.test.ts"
        ]
    },
    "compilerOptions": {
        "lib": [
          "esnext",
          "dom",
          "dom.iterable"
        ]
    }
}
